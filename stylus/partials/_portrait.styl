@media screen and ( orientation: portrait )
	html
	body
		width 100% !important
		height auto !important

	#main
		margin-top $nav-ht

		#content
			section
				float none
				display block
				padding 0

				&.slide
					-wrapper(1em, 1em, 90%)

				&.full-image
					width 100%
					max-height 100vh
					overflow hidden

					img
						width (@width)
						height auto

				&.column-slide
					.column-flow
						-no-columns()

				.section-title
					font-size 3em