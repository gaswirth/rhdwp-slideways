@require "partials/_global.styl"
@require "partials/_hamburger.styl"
@require "partials/_fonts.styl"
@require "partials/_helpers.styl"
@require "partials/_galleries.styl"
@require "partials/_overrides.styl"
@require "partials/_portrait.styl"

/* ==========================================================================
	Main Styles
   ========================================================================== */

html
	width auto
	min-width 100%
	height 100%
	text-shadow 0 0 1px transparent
	font-size 16px
	color $color1
	margin 0
	background white
	font-family $ff-body


body
	@extends html


a
	outline 0 !important
	color $color2
	text-decoration none
	transition color 0.25s

	&:hover
	&:active
		color $color3


h1
h2
h3
h4
h5
h6
	font-weight 400
	font-family $ff-headline


input
	&[type="button"]
		padding 0.5em 1em
		font-size 1.1em
		background $color3
		color $color2
		transition all 0.25s
		text-align center
		border none
		font-family $ff-headline

		&:hover
		&:active
			background $color2
			color $color3


#loader
	width 100%
	height 100%
	position fixed
	top 0
	left 0
	background-color white
	z-index 999
	text-align center
	font-family $ff-headline

	.center
		width 80%
		height auto
		position absolute
		top 50%
		left 50%
		-transform(translate(-50%, -50%))
		text-align center

	img
		width 198px
		height 198px
		position relative
		margin 0 auto

	p
		font-style italic
		font-size 1.3em
		color $color1


#page
#main
#primary
#content
	width 100%
	height 100%


#page
	width 100%
	overflow hidden


#main
	box-sizing border-box


#primary
	margin 0 auto
	position relative
	box-sizing border-box


#masthead
	width 100%
	height $nav-ht
	background $color3
	position fixed
	top 0
	left 0
	z-index 999

	#site-title
		font-size 2.8em
		margin 0
		position absolute
		top 50%
		left 2rem
		-transform(translateY(-50%))
		line-height 1
		color white

		a
			color inherit

	#hamburger
		height 100%
		position absolute
		right 1.3rem
		top 0
		background-color transparent
		display none


#rhd-nav-menu
	background $color3
	position absolute
	display none
	right 0
	top $nav-ht
	text-align right

	#site-navigation
		padding-left 0
		margin 1rem 2rem
		font-family $ff-headline
		font-weight 700

		.menu-item
			font-size 1.4em
			margin 0 0.5em

			a
				color white

				&:hover
				&:active
					color $color2


#content
	-clearfix()

	section
		width auto
		max-width 100vw
		height $section-ht
		position relative
		top $nav-ht
		overflow auto
		float left
		display inline-block

		&.slide
		&.scrolled-slide
			min-width 40vw

			.section-content
				-wrapper()
				padding 1em 0

		&.slide
			padding 1em 2em 2em 2em

		&.full-image
			padding-top 0
			padding-bottom 0

			img
				width auto
				height 100%

		&.scrolled-slide
			position relative
			padding 2em

			.entry-title
				margin-top 0

	.section-title
		font-size 5vh
		text-align center;
		margin 1rem auto

	.section-content
		p
			margin 0.5em 0

			&:first-child
				margin-top 0

			&:last-child
				margin-bottom 0

		iframe
		img
			max-width 100%
			display block

		img
			height auto


#rhd-logo-footer
	width 1.35em
	height 1.35em
	margin 0 0.05em
	position relative
	bottom 0.15em


#colophon
	text-align center


/* ==========================================================================
	Section Specifics
   ========================================================================== */

#content
	#news
		.section-content
			-unwrapper()

		.news-sep
			-wrapper(3em, 3em, 85%)
			height 1px
			background $color2

			&:last-of-type
				display none

		.news-header
			img
				width 100%
				height auto
				max-width 300px
				display block
				margin 1em auto
				border 1px solid $color3

	#about
		width 35vw

	#contact
		.section-content
			.contact-area
				margin 1em auto
				text-align center


/* ==========================================================================
	Media Queries
   ========================================================================== */

@media screen and (min-width 40em)
	#content
		#news
			width 40vw

			.news-sep
				width 75%