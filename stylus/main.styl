@require "partials/_global.styl"
@require "partials/_hamburger.styl"
@require "partials/_fonts.styl"
@require "partials/_helpers.styl"
@require "partials/_galleries.styl"
@require "partials/_overrides.styl"
@require "partials/_portrait.styl"

/* ==========================================================================
	Main Styles
   ========================================================================== */

html
	width auto
	height 100%
	text-shadow 0 0 1px transparent
	font-size 16px
	color $color1
	margin 0
	background white
	font-family $ff_body


body
	@extends html


a
	outline 0 !important
	color $color2
	text-decoration none
	transition color 0.25s

	&:hover
	&:active
		color $color3


h1
h2
h3
h4
h5
h6
	font-weight 400
	font-family $ff_headline


#page
#main
#primary
#content
	width 100%
	height 100%


#page
	width 100%
	overflow hidden


#main
	box-sizing border-box


#primary
	margin 0 auto
	position relative
	box-sizing border-box


#masthead
	width 100%
	height $nav_ht
	background $color3
	position fixed
	top 0
	left 0
	z-index 999

	#site-title
		font-size 2.8em
		margin 0
		position absolute
		top 50%
		left 2rem
		-transform(translateY(-50%))
		line-height 1
		color white

		a
			color inherit

	#hamburger
		height 100%
		position absolute
		right 1.3rem
		top 0
		background-color transparent


#rhd-nav-menu
	background $color3
	position absolute
	display none
	right 0
	top $nav_ht
	text-align right

	#site-navigation
		padding-left 0
		margin 1rem 2rem
		font-family $ff_headline
		font-weight 700

		.menu-item
			font-size 1.4em
			margin 0 0.5em

			a
				color white

				&:hover
				&:active
					color $color2


#content
	-clearfix()

	section
	figure
		float left

	section
		width auto
		max-width 100vw
		height 100%
		position relative
		padding-top $nav_ht
		padding-bottom 1em

		&.slide
			padding-left 2em
			padding-right 2em

			.section-content
				-wrapper()

		&.full-image
			img
				width auto
				height (@height)

		&.column-slide
			padding $nav_ht 2em 1em
			overflow scroll

			.section-title
				text-align left
				margin-top 0

			.column-flow
				-wrapper()
				-column-area( 33vw, 1.6em )
				text-align justify

	.section-title
		font-size 10vh
		text-align center;
		margin 1rem auto

	.section-content
	.column-flow
		padding 1em 0

		p
			margin 0.5em 0

			&:first-child
				margin-top 0

			&:last-child
				margin-bottom 0

	iframe
		max-width 100%
		display block


#rhd-logo-footer
	width 1.35em
	height 1.35em
	margin 0 0.05em
	position relative
	bottom 0.15em


#colophon
	text-align center


/* ==========================================================================
	Content Areas
   ========================================================================== */

#contact
	.section-content
		display table

		.contact-area
			display table-cell
