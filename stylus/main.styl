@require "partials/_global.styl"
@require "partials/_hamburger.styl"
@require "partials/_fonts.styl"
@require "partials/_helpers.styl"
@require "partials/_galleries.styl"
@require "partials/_overrides.styl"

/* ==========================================================================
	Main Styles
   ========================================================================== */

html
	width 100%
	text-shadow 0 0 1px transparent
	font-size 16px
	margin 0
	background white
	color black
	font-family $ff_body


body
	@extends html


a
	outline 0 !important
	color $color1
	text-decoration none
	transition color 0.25s

	&:hover
	&:active
		color $color2

h1
h2
h3
h4
h5
h6
	font-weight 400


#page
	width 100%
	overflow hidden


#main
	box-sizing border-box


#primary
	width 100%
	margin 0 auto
	position relative
	box-sizing border-box


#colophon
	width 100%
	color black
	padding 2em 0 1em 0

	.site-info
		margin 0
		text-align center
		line-height 1.7
		font-size 0.9em
		font-weight 300

		p
			font-size 0.9em
			display inline-block
			padding 2em 5em 0 5em
			border-top 1px solid black

		a
			text-decoration none
			transition color 0.2s

			&:link
			&:visited
				color inherit

			&:hover
			&:active
				color $color1

	#rhd-logo-footer
		width 1.35em
		height 1.35em
		margin 0 0.05em
		position relative
		bottom 0.15em


.section-title
	font-size 2.5em
	text-align center;
	margin 1em auto 1rem auto


#content
	section
		width 100%
		position relative

	.section-content
		-wrapper()
		padding 1em 0
		@extends .clearfix

	iframe
		max-width 100%
		display block


#top
	position relative

	#masthead
		width 100%
		height 100vh
		text-align center
		margin 0
		position relative
		background-image url($updir + '/2016/01/NICK_GASWIRTH_075.jpg')
		background-size cover
		background-position center

		.header-content
			width 100%
			padding 1em
			position absolute
			top 0.75em
			-border-radius(3px)
			z-index 2

			#site-title
				width 100%
				margin 0 auto
				font-size 2.2em
				display inline-block
				line-height 1

			#site-navigation-container
				width 94%
				margin 0 auto
				text-align center

				#site-navigation
					list-style none
					margin 0
					padding-left 0
					line-height 2
					-flexbox()
					line-height initial

					li
						-flexitem()
						font-size 1.2em
						text-transform uppercase

						a
							text-decoration none
							transition color 0.2s

							&:link
							&:visited
								color inherit

							&:hover
							&:active
								color $color1

	#bio
		padding 1em 0


#news
	background white
	padding 1em 0 2em 0

	.section-content
		.news-entries
			width 100%

			.news-entry
				width 95%
				margin 0 auto
				padding 0 1.5em
				display block
				vertical-align top
				z-index 100

				img
					width 100%
					max-width 300px
					margin 0 auto 0.25em auto
					display block
					-border-radius(2px)

				.news-content
					white-space normal
					text-align center

	.news-scroller
		width 100%
		display block
		position absolute
		top 50%
		-transform(translateY(-50%))

		a
			width 4em
			height 5em
			position absolute
			display block
			background-color $color1
			background-size 40% 90%
			background-repeat no-repeat
			transition all 0.3s ease 0.1s
			z-index 1

			&#prev
				left -2em
				background-image url('../img/left.png')
				background-position 2.1em center

			&#next
				right -2em
				background-image url('../img/right.png')
				background-position 0.4em center

			&.disabled
				display none

#media
	height auto

	#ytv
		-wrapper(1em, 1em)
		height 50vh
		max-width 100%

		&.ytv-mobile
			margin-bottom 1em

			img
				width 100%
				height auto

			iframe
				width 100%
				height 100%


#resume
	ul
		-wrapper()
		list-style none
		padding-left 0

		li
			width 100%
			margin-bottom 1em
			border-radius .125rem

			&:last-child
				margin-bottom 0

			img
				width 100%
				height auto

	.resume-container
		-wrapper( 0, 0, 95% )
		-clearfix()

		a
			display block

		img
			width 100%
			margin 0.5em auto 0
			height auto

	.section-title
		margin-top 0.25em


#contact
	.section-content
		margin-top 1em

	#contact-form
	#contact-info
		width 90%
		margin 0 auto

	#contact-form
		margin 2em auto 1em auto
		-clearfix()

		input
		textarea
			max-width none
			font-size 1em
			padding-left 0.25em
			padding-right 0.25em
			-border-radius(0.1em)
			border 2px solid black
			font-family $ff_body
			transition 0.2s all
			outline none

			&:focus
				border 2px solid $color1

			&[type="email"]
			&[type="text"]
				width 100%
				height 2em

			&[type="submit"]
				width 100%
				background-color $color1
				color white
				border none
				padding 0.5em 0.2em 0.4em 0.2em
				font-size 1.1em
				text-align center
				font-weight 300
				font-family $ff_body
				display block
				cursor pointer
				transition background-color 0.25s

				&:hover
				&:active
					background-color $color2

		textarea
			width 100%
			padding 0.25em

	#contact-info
		text-align center

		img
			max-width 100%
			height auto

	.ninja-forms-required-items
		display none


#social
	-wrapper(0, 0, 60%)
	-flexbox()

	.social-item
		width 42%
		-flexitem()

		img
			width 100%


.full-bg
	width 100%
	height 100vh
	background-size cover
	background-position center top
	background-repeat no-repeat

	.full-bg-caption
		width 100%
		background rgba( 255, 255, 255, 0.75 )
		padding 1em 0
		font-size 2em
		color black
		text-align center
		position absolute
		bottom 0

		a
			color inherit
			text-decoration none

			&:hover
			&:active
				color $color1

		h1
		h2
		h3
		p
			margin 0


#full-bg-1
	background-image url($updir + '/2016/01/NICK_GASWIRTH_235.jpg')


#full-bg-2
	background-image url($updir + '/2016/01/nick-1.jpg')
	//background-image url($updir + '/2016/01/NICK_GASWIRTH_129.jpg')


#full-bg-3
	background-image url($updir + '/2016/01/NICK_GASWIRTH_269.jpg')


/* ==========================================================================
	Media Queries
   ========================================================================== */

@media screen and (min-width 40em)
	#top
		#masthead
			.header-content
				-wrapper(0, 0, 55%, 30rem)
				padding-top 1em
				padding-bottom 3em

				#site-title
					font-size 3.7em


		#bio
			width 45%
			position absolute
			bottom 0
			left 3%
			padding 1em
			text-align justify
			-border-radius(3px)

	#news
		.section-content
			position relative
			max-width 64rem

			.news-entries
				.news-entry
					width auto
					padding 2em


	#resume
		ul
			-wrapper(0,0,70%)
			-flexbox()
			list-style none
			padding-left 0

			li
				width 34%
				-flexitem()

				img
					width 100%
					height auto

		.resume-container
			width 50% // Adjusts wrapper

			a
				display block

			img
				width 46%


	#contact
		.section-content
			margin 2em auto
			@extends .clearfix

			#contact-form
				width 60%
				float left
				margin-bottom 0

				input
					&[type="submit"]
						width 6.25rem

			#contact-info
				width 30%
				float right
				margin-top 1em


	.full-bg
		figcaption
			font-size 2em


	#full-bg-2
		background-position center


	#colophon
		.site-info
			font-size 1em