@require "partials/_global.styl"
@require "partials/_hamburger.styl"
@require "partials/_fonts.styl"
@require "partials/_helpers.styl"
@require "partials/_galleries.styl"
@require "partials/_overrides.styl"
@require "partials/_portrait.styl"

/* ==========================================================================
	Main Styles
   ========================================================================== */

html
	width auto
	min-width 100%
	height 100%
	text-shadow 0 0 1px transparent
	font-size 16px
	color $c_text
	margin 0
	background white
	font-family $ff_body


body
	@extends html


a
	outline 0 !important
	color $c_sec
	text-decoration none
	transition color 0.25s

	&:hover
	&:active
		color $c_ter


h1
h2
h3
h4
h5
h6
	-ff-title()


input
	&[type="button"]
		padding 0.5em 1em
		font-size 1.1em
		background $c_ter
		color white
		transition all 0.25s
		text-align center
		border none
		-ff-title()

		&:hover
		&:active
			background $c_sec
			color $c_ter


#loader
	width 100%
	height 100%
	position fixed
	top 0
	left 0
	background-color white
	z-index 999
	text-align center
	font-family $ff_headline

	.center
		width 80%
		height auto
		position absolute
		top 50%
		left 50%
		-transform(translate(-50%, -50%))
		text-align center

	img
		width 120px
		height 120px
		position relative
		margin 0 auto

	p
		font-style italic
		font-size 1em
		color $c_text_lt


#page
#main
#primary
#content
	width 100%
	height 100%


#page
	width 100%
	overflow hidden


#main
	box-sizing border-box


#primary
	margin 0 auto
	position relative
	box-sizing border-box


#masthead
	width 100%
	height $nav_ht
	position fixed
	top 0
	left 0
	z-index 999
	background lighten($c_ter, 90%)

	#site-title
		font-size 2em
		margin 0
		position absolute
		top 57%
		left 2rem
		-transform(translateY(-50%))
		line-height 1
		color $c_sec
		font-family $ff_headline

		a
			color inherit

	#hamburger
		height 100%
		position absolute
		right 1.3rem
		top 0
		background-color transparent
		display none

		span
			background $c_sec

			&:after
			&:before
				background @background

		&.is-active
			span
				background transparent


#rhd-nav-menu
	width 100%
	background $c_sec
	position absolute
	display none
	right 0
	top $nav_ht
	text-align center
	padding-bottom 1em

	#site-navigation
		padding-left 0
		margin 1rem 2rem
		-ff-title()

		.menu-item
			font-size 1.4em
			margin 0 0.5em
			line-height 1.5

			a
				color white

				&:hover
				&:active
					color $c_ter

	.widget-rhd-social-icons
		-wrapper(0.5em, 1.5em, 70%)

		.widget-title
			@extends .invisible

		.rhd-social-icon
			width 31%

#content
	-clearfix()

	section
		width auto
		height $section_ht
		position relative
		overflow auto
		float left
		display inline-block

		&.slide
		&.scrolled-slide
		&.full-slide
			min-width 60vw

			.section-content
				-wrapper()
				padding 1em 0

		&.slide
		&.full-slide
			max-width 100vw

		&.slide
			padding 1em 2em 2em 2em

		&.image-sep
			padding-top 0
			padding-bottom 0

			img
				width 100%
				height auto

		&.scrolled-slide
			max-width 50rem
			position relative
			padding 2em 2em 4em 2em
			border-left 1px solid lighten($c_ter, 80%)
			border-right 1px solid lighten($c_ter, 80%)

			.entry-title
				margin-top 0

		&.full-slide
			padding 0

	.section-title
		font-size 4.5vh
		text-align center;
		margin 1em auto
		-ff-title(400)
		color $c_sec

	.section-content
		p
			margin 0.5em 0
			text-align center

			&:first-child
				margin-top 0

			&:last-child
				margin-bottom 0

		iframe
		img
			max-width 100%

		img
			height auto

		iframe
			margin 1em auto
			display block


#rhd-logo-footer
	width 1.35em
	height 1.35em
	margin 0 0.05em
	position relative
	bottom 0.15em


#colophon
	text-align center
	margin 2em 0
	padding-top 2em
	border-top 1px solid $c_sec

	.site-info
		font-size 0.9em

	#rhd-logo-footer
		width 1.2em
		height 1.2em
		display inline-block
		position relative
		bottom 0.2em


/* ==========================================================================
	Section Specifics
   ========================================================================== */

#full-1
	width 100vw !important
	overflow hidden !important
	background-image url($updir + "/2016/06/Sheri-1.jpg")
	background-size cover

	.scroll-text
		position absolute
		bottom 4rem
		left 2rem
		color white
		font-size 1.3em
		font-family $ff_headline
		z-index 999

#actress
	.gallery
		.gallery-item-sizer
		.gallery-item
			width 49%

		.gutter-sizer
			width 1%

		.gallery-item
			max-width none
			padding 0
			overflow hidden
			cursor pointer

			.gallery-caption
				position absolute
				display inline
				left 0
				top 999px
				transition all 0.5s ease-out
				visibility hidden

			&.gigante
				width 100%
				height auto

				img
					width 100%
					height auto

				.gallery-caption
					width 100%
					padding 1em
					font-size 1.1em
					text-align left
					font-family $ff_body
					background rgba(0,0,0,0.5)
					top initial
					bottom 0
					visibility visible
					color white

#contact
	padding-bottom 1em

	.section-content
		.contact-area
			margin 1em auto
			text-align center

		img
			margin 1em auto


/* ==========================================================================
	Media Queries
   ========================================================================== */

@media screen and (min-width 32rem) and (orientation landscape)
	#rhd-nav-menu
		width 20em

		#site-navigation
			.menu-item
				font-size 1.2rem

	#content
		section
			top $nav_ht

			&.image-sep
				img
					width auto
					height 100%

	#actress
		width 70vw

		.gallery
			.gallery-item-sizer
			.gallery-item
				width 32.665%
